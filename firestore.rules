rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if the user is authenticated and is the owner
    function isOwner(resourceData) {
      return request.auth != null && request.auth.uid == resourceData.ownerId;
    }

    // Helper function to check if the user is creating a resource as themselves
    function isCreatingAsSelf() {
      return request.auth != null && request.auth.uid == request.resource.data.ownerId;
    }

    match /tasks/{taskId} {
      allow read, update, delete: if isOwner(resource.data);
      allow create: if isCreatingAsSelf();
    }

    match /meetings/{meetingId} {
      allow read, update, delete: if isOwner(resource.data);
      allow create: if isCreatingAsSelf();
    }

    match /accounts/{accountId} {
      allow read, update, delete: if isOwner(resource.data);
      allow create: if isCreatingAsSelf();
    }

    match /routines/{routineId} {
      allow read, update, delete: if isOwner(resource.data);
      allow create: if isCreatingAsSelf();
    }

    match /notes/{noteId} {
      allow read, update, delete: if isOwner(resource.data);
      allow create: if isCreatingAsSelf();
    }

    // Fallback for other collections (deny by default if not matched above)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
